@page
@using ScrumBoardLib.model
@model ScrumBoard.Pages.Teams.AddMemberModel
@{
}

<h1 class="jumbotron-fluid">Add TeamMember</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="@Model.TeamMember.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="@Model.TeamMember.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Select Role:</label>
                <select name="@Model.TeamMember.SpecifiedTeamMemberRole" asp-for="TeamMember.SpecifiedTeamMemberRole" class="form-control">
                    @foreach (TeamMember.TeamMemberRole specifiedTeamMemberRole in Enum.GetValues(typeof(TeamMember.TeamMemberRole)))
                    {
                        <option value="@Model.TeamMember.SpecifiedTeamMemberRole">@specifiedTeamMemberRole</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input class="btn" type="submit" style="line-height: 1;font-size: 2rem;font-weight: 300;font-style: normal; border: 5px">
            </div>
        </form>
    </div>
</div>