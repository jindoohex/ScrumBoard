@page
@using ScrumBoardLib.model
@using ScrumBoard.Services
@model ScrumBoard.Pages.UserStories.CreateUserStoryModel
@{
}

<h1 class="jumbotron-fluid">Create a UserStory</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="@Model.UserStory.Title" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea asp-for="@Model.UserStory.Description" cols="120" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label>StoryPoints:</label>
                <select asp-for="@Model.UserStory.StoryPoints" class="form-control">
                    @foreach (var sp in Model.StoryPointValues)
                    {
                        <option value="@sp">@sp</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>BusinessValue:</label>
                <select asp-for="@Model.UserStory.BusinessValue" class="form-control">
                    @foreach (var bv in Model.BusinessValues)
                    {
                        <option value="@bv">@bv</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input class="btn" type="submit" style="line-height: 1;font-size: 2rem;font-weight: 300;font-style: normal; border: 5px"><i class="fa fa-plus"></i>
            </div>
        </form>
    </div>
</div>